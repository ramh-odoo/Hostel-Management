<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='action_hostel_product' model='ir.actions.act_window'>
        <field name='name'>Hostel Products</field>
        <field name='res_model'>hostel.product</field>
        <field name='view_mode'>tree,form</field>
    </record>
    <record id='hostel_product_view_form' model='ir.ui.view'>
        <field name='name'>hostel.product.form</field>
        <field name='model'>hostel.product</field>
        <field name='arch' type='xml'>
            <form >
              <div class="oe_title">
                <h1>
                 <field name='name'/>
                </h1>
              </div>
              <group>
                <field name='count'/>
              </group>
              <notebook>
                <page string='Students'>
                    <field name='product_ids'>
                        <tree editable='bottom'>
                            <field name='product_id'/>
                        </tree>
                    </field>
                </page>
            </notebook>
            </form>
        </field>
    </record>
    <record id='hostel_product_view_tree' model='ir.ui.view'>
        <field name='name'>hostel.product.tree</field>
        <field name='model'>hostel.product</field>
        <field name='arch' type='xml'>
            <tree editable='bottom' open_form_view='True'>
            <field name='name'/>
            <field name='count'/>
            </tree>
        </field>
    </record>
</odoo>