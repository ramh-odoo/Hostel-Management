<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='action_hostel_contact'  model='ir.actions.act_window'>
        <field name='name'>Contacts</field>
        <field name='res_model'>hostel.contact</field>
        <field name='view_mode'>tree,form</field>
    </record>
    <record id='hostel_contact_view_tree'  model='ir.ui.view'>
        <field name='name'>hostel.contact.view.tree</field>
        <field name='model'>hostel.contact</field>
        <field name='arch' type='xml'>
            <tree>
                <field name="name" />
                <field name='email' />
                <field name='phone' optional='hide' />
                <field name="subject" optional='show' />
                <field name="question" optional='hide' />
            </tree>
        </field>
    </record>
</odoo>